---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  noindex?: boolean;
}

const { 
  title, 
  description = "Financial education for federal employees. Expert FERS retirement planning from Certified Financial Planners and Chartered Federal Employee Benefits Consultants.",
  canonical,
  ogImage = "/og-default.png",
  ogType = "website",
  noindex = false
} = Astro.props;

// Build canonical URL from current path if not explicitly provided
const canonicalURL = canonical 
  ? new URL(canonical, Astro.site) 
  : new URL(Astro.url.pathname, Astro.site);

const fullTitle = `${title} | PlanWell Financial Planning`;

// Schema.org LocalBusiness + FinancialService structured data
const schemaData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "FinancialService",
      "@id": "https://planwellfp.com/#organization",
      "name": "PlanWell Financial Planning",
      "alternateName": "PlanWell",
      "description": "Fee-only retirement planning exclusively for federal employees. Expert FERS pension analysis, TSP optimization, and comprehensive financial planning.",
      "url": "https://planwellfp.com",
      "telephone": ["301-388-5489", "571-543-2783"],
      "email": ["david.fei@planwellfp.com", "brennan.rhule@planwellfp.com"],
      "areaServed": {
        "@type": "Country",
        "name": "United States"
      },
      "priceRange": "$$",
      "knowsAbout": [
        "FERS Retirement",
        "Federal Employee Benefits",
        "TSP Investing",
        "FEHB Health Insurance",
        "Federal Pension Planning",
        "Medicare for Federal Employees"
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Federal Retirement Planning Services",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Free FERS Workshop",
              "description": "3-hour comprehensive federal retirement education session covering FERS pension, TSP, FEHB, and Medicare coordination."
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Federal Benefits Report",
              "description": "22-page personalized retirement analysis with pension calculations, survivor benefit options, and optimization recommendations."
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Comprehensive Financial Planning",
              "description": "Fee-only holistic retirement planning including investment strategy, tax optimization, and estate planning for federal employees."
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Investment Management",
              "description": "Professional management of TSP allocations and personal investment portfolios."
            }
          }
        ]
      },
      "founder": [
        {
          "@type": "Person",
          "name": "David Fei",
          "jobTitle": "Co-Founder & Financial Planner",
          "telephone": "301-388-5489",
          "email": "david.fei@planwellfp.com",
          "hasCredential": ["CFP®", "ChFEBC℠", "AIF®"]
        },
        {
          "@type": "Person",
          "name": "Brennan Rhule",
          "jobTitle": "Co-Founder & Financial Planner",
          "telephone": "571-543-2783",
          "email": "brennan.rhule@planwellfp.com",
          "hasCredential": ["CFP®", "ChFEBC℠", "AIF®"]
        }
      ],
      "sameAs": []
    },
    {
      "@type": "WebSite",
      "@id": "https://planwellfp.com/#website",
      "url": "https://planwellfp.com",
      "name": "PlanWell Financial Planning",
      "description": "Federal employee retirement planning specialists",
      "publisher": {
        "@id": "https://planwellfp.com/#organization"
      }
    },
    {
      "@type": "WebPage",
      "@id": canonicalURL.href,
      "url": canonicalURL.href,
      "name": fullTitle,
      "description": description,
      "isPartOf": {
        "@id": "https://planwellfp.com/#website"
      },
      "about": {
        "@id": "https://planwellfp.com/#organization"
      }
    }
  ]
