    { label: 'FERS Guide', href: '/resources#fers' },
    { label: 'TSP Strategies', href: '/resources#tsp' },
    { label: 'FEHB & Medicare', href: '/resources#fehb-medicare' },
    { label: 'Social Security', href: '/resources#social-security' },
    { label: 'Tax Strategy', href: '/resources#tax-strategy' },
  ],
  connect: [
    { label: 'Book a Call', href: '/contact' },
    { label: 'FERS Workshop', href: '/webinar' },
