---
import { Image } from 'astro:assets';
import logo from '../assets/images/planwell-logo.png';

const navLinks = [
  { label: 'About', href: '/about' },
  { label: 'Services', href: '/services' },
  { label: 'Blog', href: '/blog' },
  { label: 'Calculators', href: '/calculators' },
  { label: 'Contact', href: '/contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <a href="/" class="nav__logo">
        <Image src={logo} alt="PlanWell Financial Planning" width={560} height={320} format="webp" quality={90} loading="eager" />
      </a>
      
      <button class="nav__toggle" aria-label="Toggle navigation" aria-expanded="false">
        <span class="nav__toggle-bar"></span>
        <span class="nav__toggle-bar"></span>
        <span class="nav__toggle-bar"></span>
      </button>
      
      <div class="nav__menu">
        <ul class="nav__links">
          {navLinks.map(link => (
            <li>
              <a 
                href={link.href} 
                class={`nav__link ${currentPath === link.href ? 'nav__link--active' : ''}`}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        
        <div class="nav__cta">
          <a href="/webinar" class="btn btn--primary">
            Free FERS Workshop
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: var(--z-sticky);
    background-color: var(--color-white);
    box-shadow: var(--shadow-sm);
    border-bottom: 1px solid var(--color-gray-200);
  }
  
  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
    gap: var(--space-4);
  }
  
  .nav__logo {
    flex-shrink: 0;
    margin-left: -20px;
  }
  
  .nav__logo img {
    height: 180px !important;
    max-width: none !important;
    width: auto !important;
    margin: -50px 0;
  }
  
  .nav__toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    padding: var(--space-2);
  }
  
  .nav__toggle-bar {
    width: 24px;
    height: 2px;
    background-color: var(--color-navy);
    transition: all var(--transition-fast);
  }
  
  .nav__menu {
    display: flex;
    align-items: center;
    gap: var(--space-6);
  }
  
  .nav__links {
    display: flex;
    list-style: none;
    gap: var(--space-4);
  }
  
  .nav__link {
    font-weight: var(--font-medium);
    color: var(--color-gray-700);
    padding: var(--space-2) 0;
    position: relative;
    transition: color var(--transition-fast);
    white-space: nowrap;
    font-size: var(--text-sm);
  }
  
  .nav__link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-gold);
    transition: width var(--transition-base);
  }
  
  .nav__link:hover,
  .nav__link--active {
    color: var(--color-navy);
  }
  
  .nav__link:hover::after,
  .nav__link--active::after {
    width: 100%;
  }
  
  /* Large Desktop - more spacing */
  @media (min-width: 1280px) {
    .nav__links {
      gap: var(--space-6);
    }
    .nav__link {
      font-size: var(--text-base);
    }
    .nav__logo img {
      height: 220px !important;
      margin: -70px 0;
    }
  }
  
  /* Mobile Menu */
  @media (max-width: 1024px) {
    .nav__toggle {
      display: flex;
    }
    
    .nav__menu {
      position: fixed;
      top: 80px;
      left: 0;
      right: 0;
      bottom: 0;
      flex-direction: column;
      justify-content: flex-start;
      padding: var(--space-8);
      background-color: var(--color-white);
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all var(--transition-base);
    }
    
    .nav__menu.is-open {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
    
    .nav__links {
      flex-direction: column;
      width: 100%;
      gap: var(--space-4);
    }
    
    .nav__link {
      display: block;
      padding: var(--space-3) 0;
      font-size: var(--text-lg);
    }
    
    .nav__cta {
      width: 100%;
      margin-top: var(--space-6);
    }
    
    .nav__cta .btn {
      width: 100%;
    }
  }
</style>

<script>
  const toggle = document.querySelector('.nav__toggle');
  const menu = document.querySelector('.nav__menu');
  
  toggle?.addEventListener('click', () => {
    const isOpen = menu?.classList.toggle('is-open');
    toggle.setAttribute('aria-expanded', String(isOpen));
  });
  
  // Close menu when clicking a link
  document.querySelectorAll('.nav__link').forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.remove('is-open');
      toggle?.setAttribute('aria-expanded', 'false');
    });
  });
</script>
