---
import { Image } from 'astro:assets';
import BaseLayout from '../../layouts/BaseLayout.astro';
import locationImage from '../../assets/locations/washington-dc.png';
---

<BaseLayout 
  title="Federal Retirement Planning in Washington DC"
  description="Expert FERS retirement planning for federal employees in Washington DC. Serving the Capitol, White House staff, and DC-area agencies. Free workshop available."
>
  <!-- Hero Section -->
  <section class="location-hero">
    <div class="container">
      <div class="location-hero__grid">
        <div class="location-hero__content">
          <span class="eyebrow">Washington, DC</span>
          <h1 class="heading-xl">Federal Retirement Planning in Washington DC</h1>
          <p class="lead">
            Serving federal employees at the heart of the nation's government. 
            Expert FERS guidance for those who serve in our nation's capital.
          </p>
          <div class="location-hero__cta">
            <a href="/webinar" class="btn btn--primary btn--lg">Free FERS Workshop</a>
            <a href="/contact" class="btn btn--secondary btn--lg">Schedule Consultation</a>
          </div>
        </div>
        <div class="location-hero__image">
          <Image 
            src={locationImage} 
            alt="Washington DC Capitol and Monument skyline"
            width={600}
            height={400}
            format="webp"
            quality={85}
            class="location-hero__img"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Service Area Section -->
  <section class="section section--gray">
    <div class="container">
      <h2 class="heading-lg text-center mb-8">Service Areas in Washington DC</h2>
      <div class="service-areas">
        <div class="service-area">
          <h3>Downtown DC</h3>
          <p>Federal Triangle, Penn Quarter, Foggy Bottom, Dupont Circle</p>
        </div>
        <div class="service-area">
          <h3>Capitol Hill</h3>
          <p>Capitol Hill, Navy Yard, Eastern Market, H Street NE</p>
        </div>
        <div class="service-area">
          <h3>Northwest DC</h3>
          <p>Georgetown, Tenleytown, Chevy Chase DC, Cleveland Park</p>
        </div>
        <div class="service-area">
          <h3>Northeast & Southeast</h3>
          <p>Brookland, NoMa, Anacostia, Congress Heights</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Major Employers Section -->
  <section class="section">
    <div class="container">
      <h2 class="heading-lg text-center mb-8">Major Federal Employers We Serve</h2>
      <div class="employers-grid">
        <div class="employer-card">
          <h3>Executive Branch</h3>
          <ul>
            <li>White House Staff & EOP</li>
            <li>Department of Treasury</li>
            <li>Department of Commerce</li>
            <li>Department of Labor</li>
            <li>Department of Education</li>
          </ul>
        </div>
        <div class="employer-card">
          <h3>Legislative Branch</h3>
          <ul>
            <li>U.S. Capitol Police</li>
            <li>Library of Congress</li>
            <li>Government Accountability Office</li>
            <li>Congressional Budget Office</li>
            <li>Architect of the Capitol</li>
          </ul>
        </div>
        <div class="employer-card">
          <h3>Agencies & Commissions</h3>
          <ul>
            <li>Federal Reserve Board</li>
            <li>SEC & CFTC</li>
            <li>FCC & FTC</li>
            <li>EPA Headquarters</li>
            <li>Smithsonian Institution</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Directions Section -->
  <section class="section section--navy">
    <div class="container">
      <h2 class="heading-lg text-center mb-8">Getting to Our Workshops</h2>
      <p class="text-center lead mb-8" style="color: var(--color-gray-300);">
        We offer virtual consultations for all DC federal employees and periodic in-person workshops.
      </p>
      <div class="directions-grid">
        <div class="direction-card">
          <h3>From the Capitol</h3>
          <p>Take Independence Ave SW toward the National Mall. Our virtual workshops are accessible from anywhere in the District.</p>
        </div>
        <div class="direction-card">
          <h3>Metro Access</h3>
          <p>Convenient access via Red, Blue, Orange, Silver, Green, and Yellow lines. Federal Triangle or Metro Center for downtown locations.</p>
        </div>
        <div class="direction-card">
          <h3>Virtual Option</h3>
          <p>All consultations available via Zoom video conference. Perfect for busy federal schedules.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="section">
    <div class="container">
      <h2 class="heading-lg text-center mb-8">Why DC Federal Employees Choose PlanWell</h2>
      <div class="comparison-grid">
        <div class="comparison-card comparison-card--highlight">
          <h3>PlanWell Financial Planning</h3>
          <ul class="comparison-list">
            <li class="comparison-list__item comparison-list__item--pro">Certified Financial Planners (CFP®)</li>
            <li class="comparison-list__item comparison-list__item--pro">ChFEBC℠ Federal Benefits Specialists</li>
            <li class="comparison-list__item comparison-list__item--pro">100% Fee-Only Fiduciary</li>
            <li class="comparison-list__item comparison-list__item--pro">Free 3-Hour FERS Workshop</li>
            <li class="comparison-list__item comparison-list__item--pro">22-Page Personalized Benefits Report</li>
            <li class="comparison-list__item comparison-list__item--pro">Virtual & In-Person Available</li>
          </ul>
        </div>
        <div class="comparison-card">
          <h3>Typical DC Financial Advisors</h3>
          <ul class="comparison-list">
            <li class="comparison-list__item comparison-list__item--con">General financial credentials only</li>
            <li class="comparison-list__item comparison-list__item--con">Limited federal benefits knowledge</li>
            <li class="comparison-list__item comparison-list__item--con">Commission-based compensation</li>
            <li class="comparison-list__item comparison-list__item--con">No federal-specific education</li>
            <li class="comparison-list__item comparison-list__item--con">Generic retirement projections</li>
            <li class="comparison-list__item comparison-list__item--con">Office hours only</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section section--navy">
    <div class="container text-center">
      <h2 class="heading-lg mb-4">Ready to Plan Your Federal Retirement?</h2>
      <p class="lead mb-8" style="color: var(--color-gray-300);">
        Join thousands of DC federal employees who've taken control of their retirement.
      </p>
      <div class="flex gap-4 justify-center" style="flex-wrap: wrap;">
        <a href="/webinar" class="btn btn--primary btn--lg">Attend Free Workshop</a>
        <a href="/contact" class="btn btn--white btn--lg">Book a Consultation</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .location-hero {
    padding: var(--space-16) 0;
    background: linear-gradient(135deg, var(--color-navy) 0%, var(--color-navy-dark) 100%);
    color: var(--color-white);
  }
  
  .location-hero__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }
  
  .location-hero h1 {
    color: var(--color-white);
    margin-bottom: var(--space-4);
  }
  
  .location-hero .lead {
    color: var(--color-gray-300);
    margin-bottom: var(--space-8);
  }
  
  .location-hero__cta {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
  }
  
  .location-hero__img {
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-xl);
  }
  
  .service-areas {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-6);
  }
  
  .service-area {
    background: var(--color-white);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
  }
  
  .service-area h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-2);
  }
  
  .service-area p {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
  }
  
  .employers-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }
  
  .employer-card {
    background: var(--color-gray-100);
    padding: var(--space-8);
    border-radius: var(--radius-lg);
  }
  
  .employer-card h3 {
    font-size: var(--text-xl);
    margin-bottom: var(--space-4);
    color: var(--color-navy);
  }
  
  .employer-card ul {
    list-style: none;
    padding: 0;
  }
  
  .employer-card li {
    padding: var(--space-2) 0;
    border-bottom: 1px solid var(--color-gray-200);
    color: var(--color-gray-700);
  }
  
  .employer-card li:last-child {
    border-bottom: none;
  }
  
  .directions-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }
  
  .direction-card {
    background: rgba(255, 255, 255, 0.1);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .direction-card h3 {
    color: var(--color-gold);
    font-size: var(--text-lg);
    margin-bottom: var(--space-3);
  }
  
  .direction-card p {
    color: var(--color-gray-300);
    font-size: var(--text-sm);
  }
  
  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
    max-width: 900px;
    margin: 0 auto;
  }
  
  .comparison-card {
    background: var(--color-gray-100);
    padding: var(--space-8);
    border-radius: var(--radius-lg);
  }
  
  .comparison-card--highlight {
    background: var(--color-navy);
    color: var(--color-white);
  }
  
  .comparison-card--highlight h3 {
    color: var(--color-gold);
  }
  
  .comparison-card h3 {
    font-size: var(--text-xl);
    margin-bottom: var(--space-6);
    text-align: center;
  }
  
  .comparison-list {
    list-style: none;
    padding: 0;
  }
  
  .comparison-list__item {
    padding: var(--space-3) 0;
    padding-left: var(--space-8);
    position: relative;
    font-size: var(--text-sm);
  }
  
  .comparison-list__item::before {
    position: absolute;
    left: 0;
    font-size: var(--text-lg);
  }
  
  .comparison-list__item--pro::before {
    content: "✓";
    color: var(--color-gold);
  }
  
  .comparison-list__item--con::before {
    content: "✗";
    color: var(--color-error);
  }
  
  @media (max-width: 1024px) {
    .service-areas {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .location-hero__grid {
      grid-template-columns: 1fr;
    }
    
    .service-areas,
    .employers-grid,
    .directions-grid,
    .comparison-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
