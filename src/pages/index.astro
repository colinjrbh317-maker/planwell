---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';
import WebinarBanner from '../components/WebinarBanner.astro';
import heroImage from '../assets/images/hero-couple.png';
import brennanPhoto from '../assets/images/brennan-rhule.jpg';
import davidPhoto from '../assets/images/david-fei.jpg';
import { getNextWebinar, formatWebinarDate, getDaysUntil } from '../data/webinars';

// Get next webinar for dynamic display
const nextWebinar = getNextWebinar();
const webinarDate = nextWebinar ? formatWebinarDate(nextWebinar) : null;
const daysUntil = nextWebinar ? getDaysUntil(nextWebinar) : 0;
const urgencyText = daysUntil <= 7 ? `In ${daysUntil} days` : webinarDate?.split(',')[0]; // "Tuesday" or "In 5 days"

// Logo imports
import logoCnbc from '../assets/logos/cnbc.png';
import logoMsn from '../assets/logos/msn.png';
import logoGovexec from '../assets/logos/govexec.png';
import logoMsStart from '../assets/logos/microsoft-start.png';
import logoCeoWeekly from '../assets/logos/ceo-weekly.png';
import logoFedsmith from '../assets/logos/fedsmith.png';
import logoNyWeekly from '../assets/logos/new-york-weekly.avif';
import logoNewsbreak from '../assets/logos/newsbreak.webp';
---

<BaseLayout 
  title="Federal Retirement Planning for FERS & CSRS Employees"
  description="Expert FERS retirement planning from CFP® and ChFEBC℠ advisors. Free workshops and fee-only financial planning for federal employees."
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero__grid">
        <div class="hero__content">
          <h1 class="hero__title">
            <span class="hero__title-main">Retire on Your Terms.</span>
            <span class="hero__title-accent">Federal Benefits Made Simple.</span>
          </h1>
          
          <p class="hero__subtitle">
            Stop second-guessing your FERS retirement. Our Certified Financial Planners 
            have helped thousands of feds turn complex rules into confident retirements.
          </p>
          
          <div class="hero__cta">
            <a href="/webinar" class="btn btn--primary btn--lg hero__cta-webinar">
              <span class="btn-main">Free FERS Workshop</span>
              {nextWebinar && <span class="btn-date">{urgencyText}</span>}
            </a>
            <a href="/contact" class="btn btn--ghost btn--lg">
              Book a 1-on-1 Call
            </a>
          </div>
          
          <div class="hero__trust">
            <span class="hero__trust-item">100% Fiduciary</span>
            <span class="hero__trust-divider">•</span>
            <span class="hero__trust-item">Fee-Only</span>
            <span class="hero__trust-divider">•</span>
            <span class="hero__trust-item">CFP® Certified</span>
          </div>
        </div>
        
        <div class="hero__image">
          <Image 
            src={heroImage} 
            alt="Federal employees planning their retirement"
            width={600}
            height={600}
            loading="eager"
            fetchpriority="high"
            format="webp"
            quality={80}
            class="hero__img"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Credibility Logos -->
  <section class="logo-carousel-section">
    <div class="container">
      <p class="logo-carousel__label">As Featured In</p>
    </div>
    <div class="logo-carousel">
      <div class="logo-carousel__track">
        <!-- First set of logos -->
        <div class="logo-carousel__item">
          <Image src={logoCnbc} alt="CNBC" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoMsn} alt="MSN" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoFedsmith} alt="FedSmith" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoGovexec} alt="GovExec" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoMsStart} alt="Microsoft Start" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoCeoWeekly} alt="CEO Weekly" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoNyWeekly} alt="New York Weekly" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoNewsbreak} alt="NewsBreak" height={50} loading="lazy" format="webp" />
        </div>
        <!-- Duplicate for seamless loop -->
        <div class="logo-carousel__item">
          <Image src={logoCnbc} alt="CNBC" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoMsn} alt="MSN" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoFedsmith} alt="FedSmith" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoGovexec} alt="GovExec" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoMsStart} alt="Microsoft Start" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoCeoWeekly} alt="CEO Weekly" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoNyWeekly} alt="New York Weekly" height={50} loading="lazy" format="webp" />
        </div>
        <div class="logo-carousel__item">
          <Image src={logoNewsbreak} alt="NewsBreak" height={50} loading="lazy" format="webp" />
        </div>
      </div>
    </div>
  </section>

  <!-- Problem Section -->
  <section class="section section--gray">
    <div class="container">
      <div class="problem">
        <h2 class="section-title">Without a Clear Plan, You Could...</h2>
        
        <div class="problem__grid">
          <div class="problem__card" data-animate="fade-in-up">
            <div class="problem__icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
            </div>
            <h3>Work Years Longer Than Necessary</h3>
            <p>Not knowing your exact eligibility date and pension calculation keeps you guessing.</p>
          </div>
          
          <div class="problem__card" data-animate="fade-in-up">
            <div class="problem__icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2v20M17 5H9.5a3.5 3.5 0 000 7h5a3.5 3.5 0 010 7H6"/></svg>
            </div>
            <h3>Leave $50K+ on the Table</h3>
            <p>Mis-timed TSP withdrawals, wrong survivor benefit elections, and undervalued sick leave add up.</p>
          </div>
          
          <div class="problem__card" data-animate="fade-in-up">
            <div class="problem__icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
            </div>
            <h3>Pay Thousands More in Healthcare</h3>
            <p>Wrong timing on FEHB and Medicare Part B means higher premiums or coverage gaps.</p>
          </div>
          
          <div class="problem__card" data-animate="fade-in-up">
            <div class="problem__icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>
            </div>
            <h3>Overpay Taxes for Decades</h3>
            <p>Without Roth conversions and withdrawal sequencing, you pay far more than necessary.</p>
          </div>
        </div>
        
        <div class="problem__cta">
          <p class="problem__cta-text"><strong>You've worked too hard to risk your retirement.</strong></p>
          <a href="/webinar" class="btn btn--primary btn--lg">Get the Answers at Our Free Workshop</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Solution Section -->
  <section class="section">
    <div class="container">
      <div class="solution">
        <span class="eyebrow">We Specialize in Federal Benefits</span>
        <h2 class="section-title">Here's What You'll Know For Certain</h2>
      </div>
      
      <div class="benefits-grid">
        <div class="benefit-card" data-animate="fade-in-up">
          <div class="benefit-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 11-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          </div>
          <div class="benefit-card__content">
            <h3>Your Exact Retirement Date</h3>
            <p>We calculate your precise FERS eligibility down to the day.</p>
          </div>
        </div>
        
        <div class="benefit-card" data-animate="fade-in-up">
          <div class="benefit-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 11-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          </div>
          <div class="benefit-card__content">
            <h3>Your Pension Amount</h3>
            <p>Know exactly what you'll receive monthly, not a rough estimate.</p>
          </div>
        </div>
        
        <div class="benefit-card" data-animate="fade-in-up">
          <div class="benefit-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 11-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          </div>
          <div class="benefit-card__content">
            <h3>How to Handle Your TSP</h3>
            <p>A clear strategy for withdrawals that minimizes taxes and maximizes income.</p>
          </div>
        </div>
        
        <div class="benefit-card" data-animate="fade-in-up">
          <div class="benefit-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 11-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          </div>
          <div class="benefit-card__content">
            <h3>FEHB + Medicare Coordination</h3>
            <p>The right plan at the right time so you're never overpaying or uncovered.</p>
          </div>
        </div>
        
        <div class="benefit-card" data-animate="fade-in-up">
          <div class="benefit-card__icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 11-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          </div>
          <div class="benefit-card__content">
            <h3>Survivor Benefits Decision</h3>
            <p>Should you elect full, partial, or none? We'll show you the math.</p>
          </div>
        </div>
      </div>
      
      <div class="section-cta">
        <a href="/services" class="btn btn--secondary btn--lg">Explore Our Services</a>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="section section--navy">
    <div class="container">
      <div class="process">
        <h2 class="section-title section-title--light">How It Works</h2>
        
        <div class="process__steps">
          <div class="process__step" data-animate="fade-in-up">
            <div class="process__step-number">1</div>
            <h3>Attend Our Free Workshop</h3>
            <p>3 hours covering FERS pension, TSP, FEHB, Medicare, Social Security, and survivor benefits.</p>
          </div>
          
          <div class="process__step" data-animate="fade-in-up">
            <div class="process__step-number">2</div>
            <h3>Get Your Personalized Report</h3>
            <p>A 22-page analysis of your specific situation with exact projections.</p>
          </div>
          
          <div class="process__step" data-animate="fade-in-up">
            <div class="process__step-number">3</div>
            <h3>Retire With Confidence</h3>
            <p>Ongoing partnership to adjust your plan as life and laws change.</p>
          </div>
        </div>
        
        <div class="section-cta">
          <a href="/webinar" class="btn btn--primary btn--lg">
            Reserve My Free Workshop Seat
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Meet Your Advisors</h2>
      
      <div class="team-grid">
        <div class="team-member" data-animate="fade-in-up">
          <div class="team-member__photo-wrap">
            <Image 
              src={davidPhoto} 
              alt="David Fei"
              width={300}
              height={300}
              loading="lazy"
              format="webp"
              class="team-member__photo"
            />
          </div>
          <div class="team-member__info">
            <h3>David Fei</h3>
            <p class="team-member__title">Co-Founder & Financial Planner</p>
            <div class="team-member__creds">
              <span class="credential-badge">CFP®</span>
              <span class="credential-badge">ChFEBC℠</span>
              <span class="credential-badge">AIF®</span>
            </div>
            <p class="team-member__bio">20+ years helping federal families plan for life's challenges. David believes retirement planning should give you peace of mind, not more anxiety.</p>
          </div>
        </div>
        
        <div class="team-member" data-animate="fade-in-up">
          <div class="team-member__photo-wrap">
            <Image 
              src={brennanPhoto} 
              alt="Brennan Rhule"
              width={300}
              height={300}
              loading="lazy"
              format="webp"
              class="team-member__photo"
            />
          </div>
          <div class="team-member__info">
            <h3>Brennan Rhule</h3>
            <p class="team-member__title">Co-Founder & Financial Planner</p>
            <div class="team-member__creds">
              <span class="credential-badge">CFP®</span>
              <span class="credential-badge">ChFEBC℠</span>
              <span class="credential-badge">AIF®</span>
            </div>
            <p class="team-member__bio">Virginia Tech CFP® graduate, 15+ years in the DC area. Brennan's mission is to cut through the complexity so you can retire with confidence.</p>
          </div>
        </div>
      </div>
      
      <div class="section-cta">
        <a href="/about" class="btn btn--secondary btn--lg">Learn More About Us</a>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section section--gray">
    <div class="container">
      <h2 class="section-title">Common Questions</h2>
      
      <div class="faq-grid">
        <details class="faq-item" data-animate="fade-in-up" open>
          <summary class="faq-item__question">
            <span>When can I retire under FERS?</span>
            <svg class="faq-item__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"/></svg>
          </summary>
          <div class="faq-item__answer">
            <p>Depends on your age and years of service. Our workshop covers eligibility rules in detail, and we calculate your exact date in a 1-on-1 meeting.</p>
          </div>
        </details>
        
        <details class="faq-item" data-animate="fade-in-up">
          <summary class="faq-item__question">
            <span>How much will my pension be?</span>
            <svg class="faq-item__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"/></svg>
          </summary>
          <div class="faq-item__answer">
            <p>Based on your high-3 salary, years of service, and retirement age. We provide precise calculations, not online estimates.</p>
          </div>
        </details>
        
        <details class="faq-item" data-animate="fade-in-up">
          <summary class="faq-item__question">
            <span>What should I do with my TSP?</span>
            <svg class="faq-item__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"/></svg>
          </summary>
          <div class="faq-item__answer">
            <p>Leave it, roll to IRA, or take withdrawals. The right answer depends on your tax situation and income needs.</p>
          </div>
        </details>
        
        <details class="faq-item" data-animate="fade-in-up">
          <summary class="faq-item__question">
            <span>Do you charge for the workshop?</span>
            <svg class="faq-item__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="6 9 12 15 18 9"/></svg>
          </summary>
          <div class="faq-item__answer">
            <p>No. The 3-hour FERS workshop is completely free, no obligation.</p>
          </div>
        </details>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="section section--gold final-cta-section">
    <div class="container">
      <div class="final-cta">
        <h2 class="section-title section-title--dark">Ready to Retire With Confidence?</h2>
        <p class="final-cta__text">Join thousands of federal employees who stopped guessing and started planning.</p>
        
        <div class="final-cta__buttons">
          <a href="/webinar" class="btn btn--navy btn--lg">Free FERS Workshop</a>
          <a href="/contact" class="btn btn--outline-dark btn--lg">Book a 1-on-1 Call</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .hero {
    background: linear-gradient(135deg, var(--color-navy) 0%, var(--color-navy-dark) 100%);
    color: var(--color-white);
    padding: var(--space-20) 0 var(--space-16);
    position: relative;
    overflow: hidden;
  }
  
  .hero__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
  }
  
  .hero__title {
    margin-bottom: var(--space-6);
  }
  
  .hero__title-main {
    display: block;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    line-height: 1.1;
    color: var(--color-white);
    margin-bottom: var(--space-2);
  }
  
  .hero__title-accent {
    display: block;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    line-height: 1.1;
    color: var(--color-gold);
  }
  
  .hero__subtitle {
    font-size: var(--text-xl);
    color: var(--color-gray-300);
    margin-bottom: var(--space-8);
    line-height: 1.6;
  }
  
  .hero__cta {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
    margin-bottom: var(--space-8);
  }
  
  .hero__trust {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    flex-wrap: wrap;
  }
  
  .hero__trust-item {
    color: var(--color-gray-300);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
  }
  
  .hero__trust-divider {
    color: var(--color-gray-500);
  }
  
  .hero__image {
    display: flex;
    justify-content: center;
  }
  
  .hero__img {
    border-radius: var(--radius-xl);
    max-width: 100%;
    height: auto;
    box-shadow: var(--shadow-2xl);
  }
  
  /* Hero CTA Webinar Button with Date */
  .hero__cta-webinar {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.125rem;
    padding-bottom: 0.875rem;
  }
  
  .hero__cta-webinar .btn-main {
    font-weight: 600;
  }
  
  .hero__cta-webinar .btn-date {
    font-size: 0.8125rem;
    font-weight: 500;
    opacity: 0.9;
  }

  /* Logo Carousel */
  .logo-carousel-section {
    background: var(--color-white);
    padding: var(--space-8) 0;
    border-bottom: 1px solid var(--color-gray-200);
  }
  
  .logo-carousel__label {
    text-align: center;
    font-size: var(--text-sm);
    color: var(--color-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-4);
    font-weight: var(--font-medium);
  }
  
  .logo-carousel {
    overflow: hidden;
    position: relative;
  }
  
  .logo-carousel::before,
  .logo-carousel::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100px;
    z-index: 2;
    pointer-events: none;
  }
  
  .logo-carousel::before {
    left: 0;
    background: linear-gradient(to right, white, transparent);
  }
  
  .logo-carousel::after {
    right: 0;
    background: linear-gradient(to left, white, transparent);
  }
  
  .logo-carousel__track {
    display: flex;
    gap: var(--space-12);
    animation: scroll-logos 30s linear infinite;
    width: max-content;
  }
  

  
  @keyframes scroll-logos {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  .logo-carousel__item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-4) var(--space-8);
  }
  
  .logo-carousel__item img {
    height: 50px;
    width: auto;
    object-fit: contain;
  }

  /* Section Title */
  .section-title {
    font-size: var(--text-3xl);
    text-align: center;
    margin-bottom: var(--space-12);
    color: var(--color-navy);
  }
  
  .section-title--light {
    color: var(--color-white);
  }
  
  .section-title--dark {
    color: var(--color-navy-dark);
  }
  
  .section-cta {
    text-align: center;
    margin-top: var(--space-12);
  }

  /* Problem Section */
  .problem__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }
  
  .problem__card {
    background: var(--color-white);
    padding: var(--space-8);
    border-radius: var(--radius-lg);
    border-left: 4px solid var(--color-gold);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
  }
  
  .problem__card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }
  
  .problem__icon {
    width: 32px;
    height: 32px;
    color: var(--color-gold);
    margin-bottom: var(--space-3);
  }
  
  .problem__icon svg {
    width: 100%;
    height: 100%;
  }
  
  .problem__card h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-2);
    color: var(--color-navy);
  }
  
  .problem__card p {
    color: var(--color-gray-600);
    font-size: var(--text-base);
    line-height: 1.6;
  }
  
  .problem__cta {
    text-align: center;
    margin-top: var(--space-12);
  }
  
  .problem__cta-text {
    font-size: var(--text-xl);
    margin-bottom: var(--space-6);
    color: var(--color-navy);
  }

  /* Solution / Benefits Section */
  .solution {
    text-align: center;
