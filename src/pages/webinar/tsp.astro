  <script is:inline>
    // Configuration - Set your webhook URL here
    // For local development: http://localhost:5001/api/webinar
    // For production: Update to your deployed Flask server URL
    const WEBINAR_WEBHOOK_URL = 'http://localhost:5001/api/webinar';
    
    // Get webinar data from data attributes
    const webinarDataEl = document.getElementById('webinar-data');
    const webinarData = webinarDataEl ? {
      id: webinarDataEl.dataset.id,
      date: webinarDataEl.dataset.date,
      title: webinarDataEl.dataset.title,
      startTime: webinarDataEl.dataset.startTime,
      endTime: webinarDataEl.dataset.endTime,
      timezone: webinarDataEl.dataset.timezone
    } : {};
    
    let currentStep = 0;
    const totalSteps = 4; // intro + 3 questions
    const formData = {};
    
    function updateProgress() {
      const progress = (currentStep / totalSteps) * 100;
      document.getElementById('progress-fill').style.width = progress + '%';
    }
    
    function showStep(stepNum) {
      document.querySelectorAll('.step').forEach(step => {
        step.classList.remove('step--active');
      });
      const targetStep = document.querySelector('[data-step="' + stepNum + '"]');
      if (targetStep) {
        targetStep.classList.add('step--active');
        // Focus input if exists
        const input = targetStep.querySelector('input');
        if (input) setTimeout(() => input.focus(), 100);
      }
      updateProgress();
    }
    
    function selectOption(button, fieldName) {
      // Remove selected class from all siblings
      const allButtons = button.parentElement.querySelectorAll('.option-btn');
      allButtons.forEach(btn => btn.classList.remove('option-btn--selected'));
      
      // Add selected class to clicked button
      button.classList.add('option-btn--selected');
      
      // Store the value
      formData[fieldName] = button.dataset.value;
      
      // Auto-advance after a short delay
      setTimeout(() => {
        nextStep();
      }, 300);
    }
    
    async function submitToWebhook(data) {
      try {
        const response = await fetch(WEBINAR_WEBHOOK_URL, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            ...data,
            webinar_id: webinarData.id,
            webinar_date: webinarData.date,
            submitted_at: new Date().toISOString(),
            source: 'webinar_registration'
          })
        });
        
        if (response.ok) {
          console.log('Webinar registration submitted successfully');
          // Store locally as backup
          const submissions = JSON.parse(localStorage.getItem('webinar_submissions') || '[]');
          submissions.push({ ...data, synced: true, submitted_at: new Date().toISOString() });
          localStorage.setItem('webinar_submissions', JSON.stringify(submissions));
          return true;
        }
        throw new Error('Webhook failed');
      } catch (error) {
        console.error('Webhook submission error:', error);
        // Store locally for later sync
        const submissions = JSON.parse(localStorage.getItem('webinar_submissions') || '[]');
        submissions.push({ ...data, synced: false, submitted_at: new Date().toISOString() });
        localStorage.setItem('webinar_submissions', JSON.stringify(submissions));
        return false;
      }
    }
    
    function nextStep() {
      // Validate current step if it has input
      const currentStepEl = document.querySelector('[data-step="' + currentStep + '"]');
      const input = currentStepEl?.querySelector('input');
      if (input && !input.value.trim()) {
        input.focus();
        input.style.borderColor = '#dc3545';
        return;
      }
      if (input) {
        formData[input.name] = input.value;
        input.style.borderColor = '';
      }
      
      currentStep++;
      showStep(currentStep);
      
      // If we're on the success step, submit the form
      if (currentStep === totalSteps) {
        console.log('Webinar registration submitted:', formData);
        submitToWebhook(formData);
      }
    }
    
    function prevStep() {
      if (currentStep > 0) {
        currentStep--;
        showStep(currentStep);
      }
    }
    
    function handleEnter(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        nextStep();
      }
    }
    
    function downloadCalendar() {
      if (!webinarData.date) return;
      
      var date = new Date(webinarData.date);
      var endDate = new Date(date.getTime() + 3 * 60 * 60 * 1000);
      
      function formatICSDate(d) {
        return d.toISOString().replace(/[-:]/g, '').split('.')[0] + 'Z';
      }
      
      var lines = [
        'BEGIN:VCALENDAR',
        'VERSION:2.0',
        'PRODID:-//PlanWell//Webinar//EN',
        'BEGIN:VEVENT',
        'UID:' + String(webinarData.id) + '@planwellfp.com',
        'DTSTAMP:' + formatICSDate(new Date()),
        'DTSTART:' + formatICSDate(date),
        'DTEND:' + formatICSDate(endDate),
        'SUMMARY:' + String(webinarData.title) + ' - PlanWell Financial Planning',
        'DESCRIPTION:Free 3-hour FERS retirement workshop.',
        'LOCATION:Online (Zoom link will be emailed)',
        'STATUS:CONFIRMED',
        'END:VEVENT',
        'END:VCALENDAR'
      ];
      var icsContent = lines.join('\r\n');
      
      var blob = new Blob([icsContent], { type: 'text/calendar;charset=utf-8' });
      var link = document.createElement('a');
      link.href = URL.createObjectURL(blob);
      link.download = 'fers-workshop-' + String(webinarData.id) + '.ics';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
    }
    
    // Initialize
    updateProgress();
  </script>
