---
import logo from '../../assets/images/planwell-logo.png';
import { getNextTSPWebinar, formatTSPWebinarDate, getDaysUntilTSP, generateTSPICS } from '../../data/tsp-webinars';

// Get the next upcoming TSP webinar
const nextWebinar = getNextTSPWebinar();
const webinarDate = nextWebinar ? formatTSPWebinarDate(nextWebinar) : 'Coming Soon';
const daysUntil = nextWebinar ? getDaysUntilTSP(nextWebinar) : 0;
const webinarTime = nextWebinar ? `${nextWebinar.startTime} – ${nextWebinar.endTime} ${nextWebinar.timezone}` : '';
const webinarId = nextWebinar?.id || '';

// Optimized form - only 3 essential fields for maximum conversion
const steps = [
  { id: 1, question: "What's your name?", field: "name", type: "text", placeholder: "First name" },
  { id: 2, question: "Where should we send the details?", field: "email", type: "email", placeholder: "your.email@example.com" },
  { id: 3, question: "How many years until you retire?", field: "years_until_retirement", type: "select", options: [
    { value: "0-2", label: "0-2 years" },
    { value: "3-5", label: "3-5 years" },
    { value: "6-10", label: "6-10 years" },
    { value: "10+", label: "10+ years" },
    { value: "retired", label: "Already retired" }
  ]},
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Register for our free TSP webinar on {webinarDate}. 1-hour training on Thrift Savings Plan strategies with David Fei, CFP®." />
  <title>Free TSP Webinar - {webinarDate} | PlanWell</title>
  <link rel="canonical" href="https://planwellfp.com/webinar/" />
  
  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://planwellfp.com/webinar/" />
  <meta property="og:title" content="Free FERS Retirement Webinar - {webinarDate} | PlanWell" />
  <meta property="og:description" content="Register for our free 3-hour FERS retirement workshop. Learn about your pension, TSP, survivor benefits, and healthcare options." />
  <meta property="og:site_name" content="PlanWell Financial Planning" />
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Free FERS Retirement Webinar | PlanWell" />
  <meta name="twitter:description" content="Register for our free 3-hour FERS retirement workshop. Learn about your pension, TSP, survivor benefits, and healthcare options." />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@500;600;700;800&display=swap" rel="stylesheet" />
</head>
<body>
  <div class="funnel">
    <!-- Header -->
    <header class="funnel-header">
      <a href="/" class="funnel-logo">
        <img src={logo.src} alt="PlanWell" />
      </a>
      <a href="/" class="funnel-close" aria-label="Close">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </a>
    </header>
    
    <!-- Progress Bar -->
    <div class="progress-bar">
      <div class="progress-fill" id="progress-fill"></div>
    </div>
    
    <!-- Content Area -->
    <main class="funnel-content">
      <!-- Intro Step -->
      <div class="step step--active" data-step="0">
        <div class="step-content">
          <!-- Urgency Badge -->
          <div class="urgency-badge">
            <svg class="urgency-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 6v6l4 2"/>
            </svg>
            <span>
              {daysUntil <= 1 ? 'Tomorrow!' : 'In ' + daysUntil + ' days'}
              <span class="urgency-spots">• Limited spots</span>
            </span>
          </div>
          
          <span class="step-eyebrow">Free TSP Webinar</span>
          <h1 class="step-title">
            {webinarDate}
            <span class="step-time">{webinarTime}</span>
          </h1>
          <p class="step-description">
            Join David Fei, CFP® for a focused 1-hour training on TSP investment strategies. 
            Learn about Traditional vs Roth, fund allocation, and withdrawal planning.
          </p>
          <ul class="step-benefits">
            <li>
              <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
              <span>Traditional vs Roth TSP strategies</span>
            </li>
            <li>
              <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
              <span>C, S, I, F, G fund allocation</span>
            </li>
            <li>
              <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
              <span>Live Q&A with David Fei, CFP®</span>
            </li>
          </ul>
          <button type="button" class="btn-next btn-next--large" onclick="nextStep()">
            Reserve My Free Seat
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </button>
          <p class="step-trust">Join 500+ federal employees who've attended</p>
        </div>
      </div>
      
      <!-- Dynamic Form Steps -->
      {steps.map((step, index) => (
        <div class="step" data-step={index + 1}>
          <div class="step-content">
            <span class="step-counter">Step {index + 1} of {steps.length}</span>
            <h2 class="step-question">{step.question}</h2>
            
            {step.type === 'select' ? (
              <div class="input-wrapper">
                <div class="option-grid">
                  {step.options?.map(option => (
                    <button 
                      type="button" 
                      class="option-btn" 
                      data-value={option.value}
                      data-field={step.field}
                      onclick={`selectOption(this, '${step.field}')`}
                    >
                      {option.label}
                    </button>
                  ))}
                </div>
              </div>
            ) : (
              <div class="input-wrapper">
                <input 
                  type={step.type}
                  id={step.field}
                  name={step.field}
                  class="funnel-input"
                  placeholder={step.placeholder}
                  required
                  onkeydown="handleEnter(event)"
                  autocomplete={step.field === 'email' ? 'email' : step.field === 'name' ? 'given-name' : 'organization'}
                />
                <button type="button" class="btn-next" onclick="nextStep()">
                  {index === steps.length - 1 ? 'Complete Registration' : 'Continue'}
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
                </button>
              </div>
            )}
            
            <button type="button" class="btn-back" onclick="prevStep()">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
              Back
            </button>
          </div>
        </div>
      ))}
      
      <!-- Success Step -->
      <div class="step" data-step={steps.length + 1}>
        <div class="step-content step-content--success">
          <div class="success-icon">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <path d="M22 4L12 14.01l-3-3"/>
            </svg>
          </div>
          <h2 class="step-title">You're Registered!</h2>
          <p class="step-description success-date">
            See you on <strong>{webinarDate}</strong> at <strong>{webinarTime}</strong>
          </p>
          <p class="step-description">
            Check your inbox for the Zoom link and details. 
            We'll send a reminder before the session.
          </p>
          
          <!-- Calendar Download -->
          <div class="calendar-actions">
            <button type="button" class="btn-calendar" onclick="downloadCalendar()">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                <line x1="16" y1="2" x2="16" y2="6"/>
                <line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
              Add to Calendar
            </button>
          </div>
          
          <!-- Cross-sell to FERS Workshop -->
          <div class="upsell-box">
            <h3 class="upsell-title">Want the Complete Retirement Picture?</h3>
            <p class="upsell-description">
              Now that your TSP is optimized, get the full FERS strategy: pension timing, 
              FEHB & Medicare coordination, survivor benefits, and tax planning.
            </p>
            <a href="/webinar" class="btn-upsell">
              Also Register for FERS Workshop
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
          
          <a href="/" class="btn-home">
            Return to Homepage
          </a>
        </div>
      </div>
    </main>
  </div>

  <!-- Hidden data for JavaScript -->
  <div 
    id="webinar-data" 
    style="display:none"
    data-id={webinarId}
    data-date={nextWebinar?.date.toISOString()}
    data-title={nextWebinar?.title}
    data-start-time={nextWebinar?.startTime}
    data-end-time={nextWebinar?.endTime}
    data-timezone={nextWebinar?.timezone}
  ></div>

