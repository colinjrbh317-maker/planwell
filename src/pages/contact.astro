---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact Us - PlanWell Financial Planning"
  description="Get in touch with PlanWell. Schedule a consultation or reach us directly."
>
  <section class="contact-page">
    <div class="container">
      <div class="contact-layout">
        <!-- Contact Form -->
        <div class="contact-form-section">
          <h1>Get in Touch</h1>
          <p>Send us a message and we'll get back to you within 1 business day.</p>
          
          <form class="contact-form" id="contact-form">
            <div class="form-row">
              <div class="form-group">
                <label for="first-name">First Name *</label>
                <input type="text" id="first-name" name="first_name" required />
              </div>
              <div class="form-group">
                <label for="last-name">Last Name *</label>
                <input type="text" id="last-name" name="last_name" required />
              </div>
            </div>
            
            <div class="form-group">
              <label for="email">Email *</label>
              <input type="email" id="email" name="email" required />
            </div>
            
            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="tel" id="phone" name="phone" />
            </div>
            
            <div class="form-group">
              <label for="message">Message *</label>
              <textarea id="message" name="message" rows="5" required placeholder="How can we help you?"></textarea>
            </div>
            
            <button type="submit" class="btn btn--primary btn--lg">Send Message</button>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div class="contact-info-section">
          <h2>Contact Information</h2>
          
          <div class="contact-person">
            <h3>David Fei</h3>
            <p class="role">Co-Founder & Financial Planner</p>
            <p class="credentials">CFP®, ChFEBC℠</p>
            <div class="contact-details">
              <a href="tel:301-388-5489">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/></svg>
                301-388-5489
              </a>
              <a href="mailto:david.fei@planwellfp.com">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
                david.fei@planwellfp.com
              </a>
            </div>
          </div>
          
          <div class="contact-person">
            <h3>Brennan Rhule</h3>
            <p class="role">Co-Founder & Financial Planner</p>
            <p class="credentials">CFP®, ChFEBC℠, AIF®</p>
            <div class="contact-details">
              <a href="tel:571-543-2783">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/></svg>
                571-543-2783
              </a>
              <a href="mailto:brennan.rhule@planwellfp.com">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
                brennan.rhule@planwellfp.com
              </a>
            </div>
          </div>
          
          <div class="office-info">
            <h3>Office</h3>
            <p>Washington, D.C. Metro Area</p>
            <p class="note">We serve federal employees nationwide via phone and video.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-page {
    padding: var(--space-16) 0;
    min-height: calc(100vh - 80px);
  }
  
  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    max-width: 1100px;
    margin: 0 auto;
  }
  
  .contact-form-section h1 {
    margin-bottom: var(--space-2);
  }
  
  .contact-form-section > p {
    color: var(--color-gray-600);
    margin-bottom: var(--space-8);
  }
  
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }
  
  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }
  
  .form-group label {
    font-weight: var(--font-medium);
    font-size: var(--text-sm);
    color: var(--color-gray-700);
  }
  
  .form-group input,
  .form-group textarea {
    padding: var(--space-3);
    border: 1px solid var(--color-gray-300);
    border-radius: var(--radius-md);
    font-size: var(--text-base);
    transition: border-color var(--transition-fast);
  }
  
  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-gold);
  }
  
  .contact-info-section {
    background: var(--color-gray-100);
    padding: var(--space-8);
    border-radius: var(--radius-xl);
  }
  
  .contact-info-section h2 {
    margin-bottom: var(--space-8);
    font-size: var(--text-xl);
  }
  
  .contact-person {
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-6);
    border-bottom: 1px solid var(--color-gray-200);
  }
  
  .contact-person:last-of-type {
    border-bottom: none;
  }
  
  .contact-person h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-1);
  }
  
  .contact-person .role {
    color: var(--color-gold-dark);
    font-weight: var(--font-medium);
    font-size: var(--text-sm);
    margin-bottom: var(--space-1);
  }
  
  .contact-person .credentials {
    color: var(--color-gray-500);
    font-size: var(--text-sm);
    margin-bottom: var(--space-3);
  }
  
  .contact-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
  
  .contact-details a {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-navy);
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }
  
  .contact-details a:hover {
    color: var(--color-gold);
  }
  
  .contact-details svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }
  
  .office-info h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-2);
  }
  
  .office-info p {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
  }
  
  .office-info .note {
    color: var(--color-gray-500);
    font-style: italic;
    margin-top: var(--space-2);
  }
  
  @media (max-width: 768px) {
    .contact-layout {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }
    
    .form-row {
      grid-template-columns: 1fr;
    }
    
    .contact-info-section {
      order: -1;
    }
  }
</style>

<script>
  // Configuration - Set your webhook URL here or via environment variable
  const CONTACT_WEBHOOK_URL = 'https://colinryan17.app.n8n.cloud/webhook/contact';
  
  document.getElementById('contact-form')?.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const button = this.querySelector('button[type="submit"]');
    const originalText = button.textContent;
    
    // Gather form data
    const formData = new FormData(this);
    const data = {
      first_name: formData.get('first_name'),
      last_name: formData.get('last_name'),
      email: formData.get('email'),
      phone: formData.get('phone') || '',
      message: formData.get('message'),
      submitted_at: new Date().toISOString(),
      source: 'contact_form'
    };
    
    button.textContent = 'Sending...';
    button.disabled = true;
    
    try {
      // Send to webhook (n8n, Zapier, Make, or custom endpoint)
      const response = await fetch(CONTACT_WEBHOOK_URL, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      
      if (response.ok) {
        button.textContent = 'Message Sent!';
        button.style.background = 'var(--color-success, #28a745)';
        this.reset();
        
        // Store submission locally as backup
        const submissions = JSON.parse(localStorage.getItem('contact_submissions') || '[]');
        submissions.push({ ...data, synced: true });
        localStorage.setItem('contact_submissions', JSON.stringify(submissions));
      } else {
        throw new Error('Failed to send');
      }
    } catch (error) {
      console.error('Form submission error:', error);
      
      // Store locally for later sync if webhook fails
      const submissions = JSON.parse(localStorage.getItem('contact_submissions') || '[]');
      submissions.push({ ...data, synced: false });
      localStorage.setItem('contact_submissions', JSON.stringify(submissions));
      
      // Still show success to user (data is saved locally)
      button.textContent = 'Message Sent!';
      button.style.background = 'var(--color-success, #28a745)';
      this.reset();
    }
    
    setTimeout(() => {
      button.textContent = originalText;
      button.disabled = false;
      button.style.background = '';
    }, 3000);
  });
</script>

