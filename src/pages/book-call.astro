---
import logo from '../assets/images/planwell-logo.png';

// Form steps
const steps = [
  { id: 1, question: "What's your first name?", field: "first_name", type: "text", placeholder: "Enter your first name" },
  { id: 2, question: "And your last name?", field: "last_name", type: "text", placeholder: "Enter your last name" },
  { id: 3, question: "What email should we use to confirm your call?", field: "email", type: "email", placeholder: "your.email@example.com" },
  { id: 4, question: "What's the best phone number to reach you?", field: "phone", type: "tel", placeholder: "(555) 123-4567" },
  { id: 5, question: "What would you like to discuss?", field: "topic", type: "select", options: [
    { value: "retirement-timing", label: "When I can retire" },
    { value: "pension-estimate", label: "My pension estimate" },
    { value: "tsp-strategy", label: "TSP withdrawal strategy" },
    { value: "fehb-medicare", label: "FEHB and Medicare" },
    { value: "comprehensive", label: "Full retirement review" },
    { value: "other", label: "Something else" }
  ]},
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Schedule a free 30-minute consultation with our CFP® and ChFEBC℠ advisors to discuss your federal retirement questions." />
  <title>Book a Federal Retirement Planning Call | PlanWell</title>
  <link rel="canonical" href="https://planwellfp.com/book-call/" />
  
  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://planwellfp.com/book-call/" />
  <meta property="og:title" content="Book a Federal Retirement Planning Call | PlanWell" />
  <meta property="og:description" content="Schedule a free 30-minute consultation with our CFP® and ChFEBC℠ advisors to discuss your federal retirement questions." />
  <meta property="og:site_name" content="PlanWell Financial Planning" />
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Book a Federal Retirement Planning Call | PlanWell" />
  <meta name="twitter:description" content="Schedule a free 30-minute consultation with our CFP® and ChFEBC℠ advisors to discuss your federal retirement questions." />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@500;600;700;800&display=swap" rel="stylesheet" />
</head>
<body>
  <div class="funnel">
    <!-- Header -->
    <header class="funnel-header">
      <a href="/" class="funnel-logo">
        <img src={logo.src} alt="PlanWell" />
      </a>
      <a href="/" class="funnel-close" aria-label="Close">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 6L6 18M6 6l12 12"/>
        </svg>
      </a>
    </header>
    
    <!-- Progress Bar -->
    <div class="progress-bar">
      <div class="progress-fill" id="progress-fill"></div>
    </div>
    
    <!-- Content Area -->
    <main class="funnel-content">
      <!-- Intro Step -->
      <div class="step step--active" data-step="0">
        <div class="step-content">
          <span class="step-eyebrow">1-on-1 Strategy Call</span>
          <h1 class="step-title">Get Personalized Answers to Your Federal Retirement Questions</h1>
          <p class="step-description">
            Schedule a free 30-minute call with a CFP who specializes in 
            federal benefits. No sales pitches, just honest guidance tailored 
            to your situation.
          </p>
          <ul class="step-benefits">
            <li>
              <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
              <span>30-minute private consultation</span>
            </li>
            <li>
              <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
              <span>Speak directly with David or Brennan</span>
            </li>
            <li>
              <svg class="benefit-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 13l4 4L19 7"/></svg>
              <span>Phone or video, your choice</span>
            </li>
          </ul>
          <button type="button" class="btn-next" onclick="nextStep()">
            Schedule My Call
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
          </button>
        </div>
      </div>
      
      <!-- Dynamic Form Steps -->
      {steps.map((step, index) => (
        <div class="step" data-step={index + 1}>
          <div class="step-content">
            <span class="step-counter">Question {index + 1} of {steps.length}</span>
            <h2 class="step-question">{step.question}</h2>
            
            {step.type === 'select' ? (
              <div class="option-grid">
                {step.options?.map(option => (
                  <button 
                    type="button" 
                    class="option-btn" 
                    data-value={option.value}
                    data-field={step.field}
                    onclick={`selectOption(this, '${step.field}')`}
                  >
                    {option.label}
                  </button>
                ))}
              </div>
            ) : (
              <div class="input-wrapper">
                <input 
                  type={step.type}
                  id={step.field}
                  name={step.field}
                  class="funnel-input"
                  placeholder={step.placeholder}
                  required
                  onkeydown="handleEnter(event)"
                />
                <button type="button" class="btn-next" onclick="nextStep()">
                  Continue
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
                </button>
              </div>
            )}
            
            <button type="button" class="btn-back" onclick="prevStep()">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
              Back
            </button>
          </div>
        </div>
      ))}
      
      <!-- Success Step -->
      <div class="step" data-step={steps.length + 1}>
        <div class="step-content step-content--success">
          <div class="success-icon">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <path d="M22 4L12 14.01l-3-3"/>
            </svg>
          </div>
          <h2 class="step-title">We'll Be in Touch!</h2>
          <p class="step-description">
            One of our advisors will reach out within 1 business day 
            to schedule your call at a time that works for you.
          </p>
          <a href="/" class="btn-next">
            Return to Homepage
          </a>
        </div>
      </div>
    </main>
  </div>

  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: linear-gradient(135deg, #152a45 0%, #1e3a5f 100%);
      min-height: 100vh;
      color: #fff;
    }
    
    .funnel {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    
    .funnel-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.5rem 2rem;
    }
    
    .funnel-logo img {
      height: 40px;
      width: auto;
    }
    
    .funnel-close {
      color: rgba(255,255,255,0.6);
      transition: color 0.2s;
    }
    
    .funnel-close:hover {
      color: #fff;
    }
    
    .progress-bar {
      height: 4px;
      background: rgba(255,255,255,0.1);
    }
    
    .progress-fill {
      height: 100%;
      width: 0%;
      background: linear-gradient(90deg, #c9a55c 0%, #e4c97f 100%);
      transition: width 0.4s ease;
    }
    
    .funnel-content {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }
    
    .step {
      display: none;
      width: 100%;
      max-width: 600px;
      animation: fadeIn 0.4s ease;
    }
    
    .step--active {
      display: block;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .step-content {
      text-align: center;
    }
    
    .step-eyebrow {
      display: inline-block;
      font-size: 0.875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: #c9a55c;
      margin-bottom: 1rem;
    }
    
    .step-counter {
      display: block;
      font-size: 0.875rem;
      color: rgba(255,255,255,0.5);
      margin-bottom: 0.5rem;
    }
    
    .step-title {
      font-family: 'Outfit', sans-serif;
      font-size: clamp(2rem, 5vw, 3rem);
      font-weight: 700;
      line-height: 1.1;
      margin-bottom: 1.5rem;
    }
    
    .step-question {
      font-family: 'Outfit', sans-serif;
      font-size: clamp(1.5rem, 4vw, 2.5rem);
      font-weight: 600;
      margin-bottom: 2rem;
    }
    
    .step-description {
      font-size: 1.125rem;
      color: rgba(255,255,255,0.8);
      line-height: 1.6;
      margin-bottom: 2rem;
      max-width: 500px;
      margin-left: auto;
      margin-right: auto;
    }
    
    .step-benefits {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      margin-bottom: 2.5rem;
    }
    
    .step-benefits li {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      font-size: 1rem;
      color: rgba(255,255,255,0.9);
    }
    
    .benefit-icon {
      width: 20px;
      height: 20px;
      color: #c9a55c;
      flex-shrink: 0;
    }
    
    .input-wrapper {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      max-width: 400px;
      margin: 0 auto;
    }
    
    .funnel-input {
      width: 100%;
      padding: 1.25rem 1.5rem;
      font-size: 1.25rem;
      font-family: inherit;
      background: rgba(255,255,255,0.1);
      border: 2px solid rgba(255,255,255,0.2);
      border-radius: 0.75rem;
      color: #fff;
      text-align: center;
      transition: all 0.2s;
    }
    
    .funnel-input::placeholder {
      color: rgba(255,255,255,0.4);
    }
    
    .funnel-input:focus {
      outline: none;
      border-color: #c9a55c;
      background: rgba(255,255,255,0.15);
    }
    
    .option-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 0.75rem;
      max-width: 400px;
      margin: 0 auto 1.5rem;
    }
    
    .option-btn {
      padding: 1rem 1.5rem;
      font-size: 1.125rem;
      font-family: inherit;
      font-weight: 500;
      background: rgba(255,255,255,0.1);
      border: 2px solid rgba(255,255,255,0.2);
      border-radius: 0.75rem;
      color: #fff;
      cursor: pointer;
      transition: all 0.2s;
    }
    
    .option-btn:hover {
      background: rgba(255,255,255,0.2);
      border-color: rgba(255,255,255,0.3);
    }
    
    .option-btn--selected {
      background: #c9a55c;
      border-color: #c9a55c;
      color: #152a45;
    }
    
    .btn-next {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 1rem 2rem;
      font-size: 1.125rem;
      font-weight: 600;
      font-family: inherit;
      background: linear-gradient(135deg, #c9a55c 0%, #a88a44 100%);
      color: #152a45;
      border: none;
      border-radius: 0.5rem;
      cursor: pointer;
      transition: all 0.2s;
      text-decoration: none;
    }
    
    .btn-next:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(201, 165, 92, 0.3);
    }
    
    .btn-back {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      margin-top: 2rem;
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
      font-family: inherit;
      color: rgba(255,255,255,0.5);
      background: none;
      border: none;
      cursor: pointer;
      transition: color 0.2s;
    }
    
    .btn-back:hover {
      color: #fff;
    }
    
    .step-content--success .success-icon {
      width: 100px;
      height: 100px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      background: linear-gradient(135deg, #c9a55c 0%, #a88a44 100%);
      border-radius: 50%;
      color: #152a45;
    }
    
    @media (max-width: 640px) {
      .funnel-header {
        padding: 1rem;
      }
      
      .funnel-content {
        padding: 1rem;
      }
    }
  </style>

  <script is:inline>
    let currentStep = 0;
    const totalSteps = 6; // intro + 5 questions
    const formData = {};
    
    function updateProgress() {
      const progress = (currentStep / totalSteps) * 100;
      document.getElementById('progress-fill').style.width = progress + '%';
    }
    
    function showStep(stepNum) {
      document.querySelectorAll('.step').forEach(step => {
        step.classList.remove('step--active');
      });
      const targetStep = document.querySelector(`[data-step="${stepNum}"]`);
      if (targetStep) {
        targetStep.classList.add('step--active');
        // Focus input if exists
        const input = targetStep.querySelector('input');
        if (input) setTimeout(() => input.focus(), 100);
      }
      updateProgress();
    }
    
    function nextStep() {
      // Validate current step if it has input
      const currentStepEl = document.querySelector(`[data-step="${currentStep}"]`);
      const input = currentStepEl?.querySelector('input');
      if (input && !input.value.trim()) {
        input.focus();
        input.style.borderColor = '#dc3545';
        return;
      }
      if (input) {
        formData[input.name] = input.value;
        input.style.borderColor = '';
      }
      
      currentStep++;
      showStep(currentStep);
      
      // If we're on the success step, submit the form
      if (currentStep === totalSteps) {
        console.log('Form submitted:', formData);
        // In production, send to backend here
      }
    }
    
    function prevStep() {
      if (currentStep > 0) {
        currentStep--;
        showStep(currentStep);
      }
    }
    
    function selectOption(btn, field) {
      // Remove selection from siblings
      btn.parentElement.querySelectorAll('.option-btn').forEach(b => {
        b.classList.remove('option-btn--selected');
      });
      btn.classList.add('option-btn--selected');
      formData[field] = btn.dataset.value;
      
      // Auto advance after short delay
      setTimeout(() => nextStep(), 300);
    }
    
    function handleEnter(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        nextStep();
      }
    }
    
    // Initialize
    updateProgress();
  </script>
</body>
</html>
