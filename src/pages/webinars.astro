---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getNextWebinar, formatWebinarDate } from '../data/webinars';
import { getNextTSPWebinar, formatTSPWebinarDate } from '../data/tsp-webinars';

// Get next webinars for dynamic button text
const nextFERS = getNextWebinar();
const nextTSP = getNextTSPWebinar();

const fersDate = nextFERS ? formatWebinarDate(nextFERS) : 'TBD';
const tspDate = nextTSP ? formatTSPWebinarDate(nextTSP) : 'TBD';
---

<BaseLayout 
  title="Which Webinar Is Right For You? | PlanWell"
  description="Choose the free federal employee training that addresses your biggest retirement concern right now."
>
  <section class="webinar-selector">
    <div class="container">
      <div class="selector-content">
        <h1>Which Topic Is Most Important to You Right Now?</h1>
        <p class="subtitle">Choose one free training session (or attend both!)</p>
        
        <div class="button-stack">
          <!-- TSP Pain Point Button -->
          <a href="/webinar/tsp" class="choice-btn choice-btn--tsp">
            <div class="btn-icon">ðŸ’°</div>
            <div class="btn-content">
              <h2>I'm confused about my TSP investments</h2>
              <p>Get clarity on Traditional vs Roth, fund allocation, and withdrawal strategies</p>
              <span class="btn-meta">1-hour training â€¢ {tspDate}</span>
            </div>
            <svg class="btn-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>

          <!-- FERS Pain Point Button -->
          <a href="/webinar" class="choice-btn choice-btn--fers">
            <div class="btn-icon">ðŸŽ¯</div>
            <div class="btn-content">
              <h2>I need the complete retirement picture</h2>
              <p>Pension timing, TSP, FEHB, Medicare, survivor benefits, and tax planning</p>
              <span class="btn-meta">3-hour comprehensive workshop â€¢ {fersDate}</span>
            </div>
            <svg class="btn-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>

          <!-- Neither Option -->
          <a href="/book-call" class="choice-btn choice-btn--neither">
            <div class="btn-icon">ðŸ“ž</div>
            <div class="btn-content">
              <h2>I have specific questions about my situation</h2>
              <p>Skip the webinar and schedule a personalized 1-on-1 strategy call</p>
              <span class="btn-meta">Free consultation with a CFPÂ®</span>
            </div>
            <svg class="btn-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>

        <p class="footer-note">All options are 100% free with no obligation</p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .webinar-selector {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-6) var(--space-4);
    background: linear-gradient(135deg, #1e3a5f 0%, #152a45 100%);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    width: 100%;
  }

  .selector-content {
    text-align: center;
  }

  h1 {
    font-family: 'Outfit', sans-serif;
    font-size: clamp(1.5rem, 5vw, 2.75rem);
    font-weight: 700;
    color: white;
    margin-bottom: var(--space-2);
    line-height: 1.2;
  }

  .subtitle {
    font-size: clamp(1rem, 3vw, 1.25rem);
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-8);
  }

  .button-stack {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .choice-btn {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-5);
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-xl);
    text-decoration: none;
    text-align: left;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .choice-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(201, 165, 92, 0.1) 0%, rgba(201, 165, 92, 0.05) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .choice-btn:hover {
    transform: translateY(-4px);
    border-color: rgba(201, 165, 92, 0.5);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }

  .choice-btn:hover::before {
    opacity: 1;
  }

  .choice-btn--tsp:hover {
    border-color: var(--color-gold);
  }

  .choice-btn--fers:hover {
    border-color: var(--color-gold);
  }

  .choice-btn--neither:hover {
    border-color: rgba(255, 255, 255, 0.4);
  }

  .btn-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
    z-index: 1;
  }

  .btn-content {
    flex: 1;
    z-index: 1;
  }

  .btn-content h2 {
    font-family: 'Outfit', sans-serif;
    font-size: clamp(1.125rem, 3vw, 1.5rem);
    font-weight: 600;
    color: white;
    margin-bottom: var(--space-2);
    line-height: 1.3;
  }

  .btn-content p {
    font-size: clamp(0.875rem, 2vw, 1rem);
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--space-2);
    line-height: 1.5;
  }

  .btn-meta {
    display: inline-block;
    font-size: 0.875rem;
    color: var(--color-gold);
    font-weight: 500;
  }

  .btn-arrow {
    color: rgba(255, 255, 255, 0.4);
    flex-shrink: 0;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .choice-btn:hover .btn-arrow {
    color: var(--color-gold);
    transform: translateX(4px);
  }

  .footer-note {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    font-style: italic;
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .webinar-selector {
      padding: var(--space-3) var(--space-3);
    }

    h1 {
      font-size: 1.25rem;
      margin-bottom: var(--space-1);
    }

    .subtitle {
      font-size: 0.875rem;
      margin-bottom: var(--space-5);
    }

    .button-stack {
      gap: var(--space-2);
      margin-bottom: var(--space-3);
    }

    .choice-btn {
      padding: var(--space-4);
      gap: var(--space-3);
    }

    .btn-icon {
      font-size: 1.75rem;
    }

    .btn-content h2 {
      font-size: 1rem;
      margin-bottom: var(--space-1);
    }

    .btn-content p {
      font-size: 0.8125rem;
      margin-bottom: var(--space-1);
    }

    .btn-meta {
      font-size: 0.75rem;
    }

    .footer-note {
      font-size: 0.75rem;
    }
  }

  /* Ensure above-the-fold on desktop */
  @media (min-height: 800px) and (min-width: 1024px) {
    .webinar-selector {
      padding: var(--space-12) var(--space-4);
    }
  }
</style>
