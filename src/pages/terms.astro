  }
  
  .legal-page__updated {
    color: var(--color-gray-500);
    font-size: var(--text-sm);
    margin-bottom: var(--space-10);
  }
  
  .legal-content {
    max-width: 800px;
  }
  
  .legal-content h2 {
    margin-top: var(--space-10);
    margin-bottom: var(--space-4);
    font-size: var(--text-xl);
    color: var(--color-navy);
  }
  
  .legal-content h3 {
