---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Featured articles - actual PlanWell content
const featuredArticles = [
  {
    title: "FERS Retirement Planning: Your Essential Guide to a Secure Future",
    slug: "fers-retirement-planning-essential-guide",
    excerpt: "A comprehensive introduction to the Federal Employees Retirement System, explaining its origins, components, and how to maximize your benefits for a secure retirement.",
    category: "FERS",
    readTime: "15 min read"
  },
  {
    title: "FERS Supplement Explained: Your 2025 Bridge to Social Security",
    slug: "fers-supplement-explained",
    excerpt: "Understanding the Special Retirement Supplement (SRS) and how it bridges the gap between your FERS retirement and Social Security eligibility.",
    category: "FERS",
    readTime: "10 min read"
  },
  {
    title: "Boost Your FERS Retirement Plan: How to Master Your Government Pension",
    slug: "boost-your-fers-retirement-plan",
    excerpt: "Proven strategies to optimize your federal retirement benefits, including FERS pension, TSP, and Social Security coordination.",
    category: "Strategy",
    readTime: "12 min read"
  }
];

// Topics/categories
const topics = [
  { name: "FERS Pension", slug: "fers", count: 15, id: "fers" },
  { name: "TSP & Investing", slug: "tsp", count: 12, id: "tsp" },
  { name: "FEHB & Medicare", slug: "fehb-medicare", count: 8, id: "fehb-medicare" },
  { name: "Social Security", slug: "social-security", count: 6, id: "social-security" },
  { name: "Survivor Benefits", slug: "survivor-benefits", count: 5, id: "survivor-benefits" },
  { name: "Tax Strategy", slug: "tax-strategy", count: 7, id: "tax-strategy" },
  { name: "FEGLI & Life Insurance", slug: "fegli", count: 4, id: "fegli" },
  { name: "Federal News", slug: "news", count: 10, id: "news" }
];

// Recent articles - actual PlanWell content
const recentArticles = [
  {
    title: "Federal Retirement Applications OPM Backlog November 2025",
    slug: "opm-retirement-backlog-november-2025",
    category: "Federal News",
    date: "Nov 2025"
  },
  {
    title: "Federal Employee Retirement: Service Deposits and Timing Your Exit",
    slug: "service-deposits-timing-retirement",
    category: "FERS",
    date: "Nov 2025"
  },
  {
    title: "Simplify Your FERS Pension Calculation",
    slug: "simplify-fers-pension-calculation",
    category: "FERS",
    date: "Oct 2025"
  },
  {
    title: "FERS Deferred Retirement Calculator and FAQ for Special Provisions",
    slug: "fers-deferred-retirement-special-provisions",
    category: "Calculators",
    date: "Oct 2025"
  },
  {
    title: "Some Federal Retirees Will Still Pay Tax on Social Security Benefits",
    slug: "federal-retirees-social-security-tax",
    category: "Tax Strategy",
    date: "Sep 2025"
  },
  {
    title: "Complete Guide To FERS Special Provision Retirement",
    slug: "fers-special-provision-retirement-guide",
    category: "FERS",
    date: "Sep 2025"
  }
];
---

<BaseLayout 
  title="Federal Employee Benefits Blog - FERS, TSP & Retirement Tips"
  description="Educational articles on FERS pension, TSP investing, FEHB health insurance, Medicare coordination, and tax strategies for federal employees."
>
  <!-- Hero -->
  <section class="page-hero">
    <div class="container">
      <span class="eyebrow">Learning Center</span>
      <h1 class="heading-xl">Federal Retirement Education</h1>
      <p class="lead max-w-3xl">
        Expert articles, guides, and resources to help you navigate 
        FERS, TSP, FEHB, and everything else about your federal benefits.
      </p>
    </div>
  </section>
  
  <!-- Featured Articles -->
  <section class="section section--gray">
    <div class="container">
      <h2 class="heading-md mb-8">Featured Articles</h2>
      
      <div class="featured-grid" data-animate="fade-in-up">
        {featuredArticles.map((article, index) => (
          <a href={`/resources/${article.slug}`} class={`featured-card ${index === 0 ? 'featured-card--main' : ''}`}>
            <div class="featured-card__content">
              <span class="featured-card__category">{article.category}</span>
              <h3>{article.title}</h3>
              <p>{article.excerpt}</p>
              <span class="featured-card__meta">{article.readTime}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Topics Grid -->
  <section class="section">
    <div class="container">
      <h2 class="heading-md mb-8 text-center">Browse by Topic</h2>
      
      <div class="topics-grid">
        {topics.map(topic => (
          <a href={`/resources#${topic.id}`} class="topic-card" data-animate="fade-in-up">
            <span class="topic-card__name">{topic.name}</span>
            <span class="topic-card__count">{topic.count} articles</span>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Recent Articles -->
  <section class="section section--gray">
    <div class="container">
      <div class="recent-header">
        <h2 class="heading-md">Latest Articles</h2>
        <a href="/resources" class="btn btn--secondary btn--sm">View All →</a>
      </div>
      
      <div class="recent-grid">
        {recentArticles.map(article => (
          <a href={`/resources/${article.slug}`} class="recent-card" data-animate="fade-in-up">
            <div class="recent-card__content">
              <span class="recent-card__category">{article.category}</span>
              <h3>{article.title}</h3>
              <span class="recent-card__date">{article.date}</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Newsletter / CTA -->
  <section class="section section--navy text-center">
    <div class="container">
      <div data-animate="fade-in-up">
        <h2 class="heading-lg">Stay Informed on Federal Benefits</h2>
        <p class="lead" style="color: var(--color-gray-300); max-width: 36rem; margin: 0 auto var(--space-8);">
          Get our free FERS workshop and learn directly from our ChFEBC℠ experts. 
          We cover everything in 3 hours.
        </p>
        <a href="/webinar" class="btn btn--primary btn--lg">Reserve My Free Workshop Seat</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--color-navy) 0%, var(--color-navy-dark) 100%);
    color: var(--color-white);
    padding: var(--space-24) 0 var(--space-16);
    text-align: center;
  }
  
  .page-hero h1 {
    color: var(--color-white);
    margin-bottom: var(--space-4);
  }
  
  .page-hero .lead {
    color: var(--color-gray-300);
    margin: 0 auto;
  }
  
  .featured-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-6);
  }
  
  .featured-card {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
    display: block;
  }
  
  .featured-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }
  
  .featured-card--main {
    grid-row: span 2;
    padding: var(--space-10);
    background: linear-gradient(135deg, var(--color-navy) 0%, var(--color-navy-light) 100%);
    color: var(--color-white);
  }
  
  .featured-card--main h3 {
    color: var(--color-white);
    font-size: var(--text-2xl);
  }
  
  .featured-card--main p {
    color: var(--color-gray-300);
  }
  
  .featured-card__category {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gold);
    margin-bottom: var(--space-3);
  }
  
  .featured-card h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-3);
  }
  
  .featured-card p {
    color: var(--color-gray-600);
    font-size: var(--text-sm);
    margin-bottom: var(--space-4);
  }
  
  .featured-card__meta {
    font-size: var(--text-xs);
    color: var(--color-gray-500);
  }
  
  .topics-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-4);
  }
  
  .topic-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-6);
    background: var(--color-white);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-gray-200);
    transition: all var(--transition-base);
    text-align: center;
  }
  
  .topic-card:hover {
    border-color: var(--color-gold);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }
  
  .topic-card__icon {
    font-size: 2rem;
  }
  
  .topic-card__name {
    font-weight: var(--font-semibold);
    color: var(--color-navy);
  }
  
  .topic-card__count {
    font-size: var(--text-xs);
    color: var(--color-gray-500);
  }
  
  .recent-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-8);
  }
  
  .recent-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }
  
  .recent-card {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-gray-200);
    transition: all var(--transition-base);
  }
  
  .recent-card:hover {
    border-color: var(--color-gold);
    box-shadow: var(--shadow-md);
  }
  
  .recent-card__category {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gold);
    margin-bottom: var(--space-2);
  }
  
  .recent-card h3 {
    font-size: var(--text-base);
    margin-bottom: var(--space-3);
    line-height: 1.4;
  }
  
  .recent-card__date {
    font-size: var(--text-xs);
    color: var(--color-gray-500);
  }
  
  @media (max-width: 1024px) {
    .topics-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .recent-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .featured-grid {
      grid-template-columns: 1fr;
    }
    
    .featured-card--main {
      grid-row: auto;
    }
  }
  
  @media (max-width: 640px) {
    .topics-grid,
    .recent-grid {
      grid-template-columns: 1fr;
    }
    
    .recent-header {
      flex-direction: column;
      gap: var(--space-4);
      align-items: flex-start;
    }
  }
</style>
