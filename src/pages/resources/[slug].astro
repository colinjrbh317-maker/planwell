---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { articles } from '../../data/articles';

// Required for dynamic routes - generate paths from our article data
export function getStaticPaths() {
  return Object.keys(articles).map(slug => ({
    params: { slug },
    props: { article: articles[slug] }
  }));
}

const { article } = Astro.props;
---

<BaseLayout title={article.title}>
  <article class="article">
    <!-- Article Header -->
    <header class="article__header">
      <div class="container">
        <div class="article__header-content">
          <a href="/resources" class="article__back">← Back to Learning Center</a>
          <span class="article__category">{article.category}</span>
          <h1 class="heading-xl">{article.title}</h1>
          <div class="article__meta">
            <span class="article__author">By {article.author}</span>
            <span class="article__divider">•</span>
            <span class="article__date">{article.date}</span>
            <span class="article__divider">•</span>
            <span class="article__read-time">{article.readTime}</span>
          </div>
        </div>
      </div>
    </header>
    
    <!-- Article Content -->
    <div class="article__body">
      <div class="container">
        <div class="article__content-wrapper">
          <!-- Floating Image -->
          <div class="article__image-float">
            <img src={article.image} alt={article.title} />
          </div>
          
          <div class="article__content" set:html={article.content} />
        </div>
        
        <!-- CTA Box -->
        <aside class="article__cta">
          <h3>Want personalized guidance?</h3>
          <p>Get your specific pension calculation and optimization strategies in our free FERS workshop.</p>
          <div class="article__cta-buttons">
            <a href="/webinar" class="btn btn--primary">Join Free Workshop</a>
            <a href="/contact" class="btn btn--secondary">Schedule a Call</a>
          </div>
        </aside>
        
        <!-- Related Articles -->
        <nav class="article__related">
          <h3>Related Articles</h3>
          <div class="related-grid">
            <a href="/resources/fers-retirement-planning-essential-guide" class="related-card">
              <span class="related-card__category">FERS</span>
              <span class="related-card__title">FERS Retirement Planning: Essential Guide</span>
            </a>
            <a href="/resources/fers-supplement-explained" class="related-card">
              <span class="related-card__category">FERS</span>
              <span class="related-card__title">Understanding the FERS Special Retirement Supplement</span>
            </a>
            <a href="/resources/boost-your-fers-retirement-plan" class="related-card">
              <span class="related-card__category">Strategy</span>
              <span class="related-card__title">Boost Your FERS Retirement Plan</span>
            </a>
          </div>
        </nav>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .article__header {
    background: linear-gradient(135deg, var(--color-navy) 0%, var(--color-navy-dark) 100%);
    color: var(--color-white);
    padding: var(--space-16) 0 var(--space-12);
  }
  
  .article__header-content {
    max-width: 800px;
  }
  
  .article__back {
    display: inline-block;
    color: var(--color-gray-400);
    font-size: var(--text-sm);
    margin-bottom: var(--space-4);
    transition: color var(--transition-fast);
  }
  
  .article__back:hover {
    color: var(--color-gold);
  }
  
  .article__category {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gold);
    margin-bottom: var(--space-4);
  }
  
  .article__header h1 {
    color: var(--color-white);
    margin-bottom: var(--space-6);
  }
  
  .article__meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    align-items: center;
    color: var(--color-gray-400);
    font-size: var(--text-sm);
  }
  
  .article__divider {
    color: var(--color-gray-600);
  }
  
  .article__body {
    padding: var(--space-16) 0;
  }
  
  .article__content-wrapper {
    max-width: 900px;
  }
  
  .article__image-float {
    float: right;
    width: 320px;
    margin: 0 0 var(--space-6) var(--space-8);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }
  
  .article__image-float img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .article__content {
    font-size: var(--text-lg);
    line-height: 1.8;
  }
  
  .article__content :global(h2) {
    margin-top: var(--space-10);
    margin-bottom: var(--space-4);
    font-size: var(--text-2xl);
  }
  
  .article__content :global(h3) {
    margin-top: var(--space-8);
    margin-bottom: var(--space-3);
    font-size: var(--text-xl);
  }
  
  .article__content :global(p) {
    margin-bottom: var(--space-5);
    color: var(--color-gray-700);
  }
  
  .article__content :global(ul),
  .article__content :global(ol) {
    margin-bottom: var(--space-5);
    padding-left: var(--space-6);
  }
  
  .article__content :global(li) {
    margin-bottom: var(--space-2);
    color: var(--color-gray-700);
  }
  
  .article__content :global(strong) {
    color: var(--color-navy);
  }
  
  .article__cta {
    max-width: 720px;
    margin-top: var(--space-12);
    padding: var(--space-8);
    background: linear-gradient(135deg, var(--color-navy) 0%, var(--color-navy-light) 100%);
    border-radius: var(--radius-xl);
    color: var(--color-white);
  }
  
  .article__cta h3 {
    color: var(--color-white);
    margin-bottom: var(--space-2);
  }
  
  .article__cta p {
    color: var(--color-gray-300);
    margin-bottom: var(--space-6);
  }
  
  .article__cta-buttons {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
  }
  
  .article__related {
    max-width: 720px;
    margin-top: var(--space-12);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-gray-200);
  }
  
  .article__related h3 {
    margin-bottom: var(--space-6);
  }
  
  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
  }
  
  .related-card {
    padding: var(--space-5);
    background: var(--color-gray-100);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }
  
  .related-card:hover {
    background: var(--color-white);
    box-shadow: var(--shadow-md);
  }
  
  .related-card__category {
    display: block;
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-gold);
    margin-bottom: var(--space-2);
  }
  
  .related-card__title {
    display: block;
    font-weight: var(--font-medium);
    color: var(--color-navy);
    font-size: var(--text-sm);
    line-height: 1.4;
  }
  
  @media (max-width: 768px) {
    .related-grid {
      grid-template-columns: 1fr;
    }
    
    .article__cta-buttons {
      flex-direction: column;
    }
    
    .article__image-float {
      float: none;
      width: 100%;
      margin: 0 0 var(--space-6) 0;
    }
  }
</style>
